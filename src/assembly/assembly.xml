<assembly>
  <id>${project.version}</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${pom.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>pom.xml</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
</assembly>